@model dynamic
<div class="blog-post">
  <div class="image">
    <a href="/@System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName@Model.Url">
      <img src="@Html.Raw(this.Model.Properties["Image"].Html)" alt="" />
    </a>
  </div>
  <a href="/@System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName@Model.Url">@Html.Raw(@Model.Properties["Preview"].Html)</a>
</div>